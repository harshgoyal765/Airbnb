<%- include('../partials/head') %>
</head>
<body>
  <%- include('../partials/nav') %>

  <main class="container mx-auto mt-8 p-8 bg-white rounded-lg shadow-md shadow-black">
    <h1 class="text-3xl font-bold mb-6 text-center text-gray-800">Register with your info</h1>

   <form action="/signup" method="POST" class="max-w-lg mx-auto space-y-6 ">
    
  <!-- First Name -->
   <%- include('../partials/errors') %>
  <div>

    <label for="firstName" class="block mb-1 text-sm font-medium text-gray-700">First Name</label>
    <input
      type="text"
      name="firstName"
      id="firstName"
      value="<%= oldInput.firstName ? oldInput.firstName : '' %>"
      required
      placeholder="John"
      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 transition"
    />
  </div>

  <!-- Last Name -->
  <div>
    <label for="lastName" class="block mb-1 text-sm font-medium text-gray-700">Last Name</label>
    <input
      type="text"
      name="lastName"
      id="lastName"
      placeholder="Doe"
      value="<%= oldInput.lastName ? oldInput.lastName : '' %>"
      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 transition"
    />
  </div>

  <!-- Email -->
  <div>
    <label for="email" class="block mb-1 text-sm font-medium text-gray-700">Email Address</label>
    <input
      type="email"
      name="email"
      id="email"
      required
      value="<%= oldInput.email ? oldInput.email : '' %>"
      placeholder="you@example.com"
      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 transition"
    />
  </div>

  <!-- Password -->
  <div>
    <label for="password" class="block mb-1 text-sm font-medium text-gray-700">Password</label>
    <input
      type="password"
      name="password"
      id="password"
      required
      placeholder="********"
      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 transition"
    />
  </div>

  <!-- Confirm Password -->
  <div>
    <label for="confirmPassword" class="block mb-1 text-sm font-medium text-gray-700">Confirm Password</label>
    <input
      type="password"
      name="confirmPassword"
      id="confirmPassword"
      required
      placeholder="********"
      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 transition"
    />
  </div>

  <!-- User Type -->
  <div>
    <p class="font-medium text-gray-700 mb-2">User Type</p>
    <div class="flex items-center gap-6">
      <label class="flex items-center text-sm font-medium text-gray-600">
        <input
          type="radio"
          name="userType"
          value="guest"
          class="mr-2"
          checked="<% oldInput.userType === 'guest' ? 'checked' : '' %>"
        />
        Guest
      </label>
      <label class="flex items-center text-sm font-medium text-gray-600">
        <input
          type="radio"
          name="userType"
          value="host"
          class="mr-2"
          checked=""<% oldInput.userType === 'guest' ? 'checked' : '' %>"
        />
        Host
      </label>
    </div>
  </div>

  <!-- Terms -->
  <div class="flex items-center">
    <input
      type="checkbox"
      name="terms"
      id="terms"
      class="mr-2"
      required
    />
    <label for="terms" class="text-sm text-gray-600">
      I agree to the <a href="#" class="text-red-500 hover:underline">terms and conditions</a>
    </label>
  </div>

  <!-- Submit Button -->
  <button
    type="submit"
    class="w-full bg-red-500 hover:bg-red-600 text-white py-3 rounded-lg font-semibold transition duration-300"
  >
    Register
  </button>

</form>
